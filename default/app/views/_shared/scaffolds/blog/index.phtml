<div class="page-header">'
    <h1>{{title}}</h1>
</div>
{% exec View::getContent %}
{% partial 'top' %}
{%if result.items %}
	<table class="table table-bordered table-condensed table-hover">
		{%exec current result.items  as head %}
		<thead>
		{% for i in cols %}
			<th>{%exec head.get_alias i %}</th>
		{% endfor %}
		{% if action %}
			{% exec count action as c %}
			<th colspan="{{c}}">Acciones</th>
		{% endif %}
	</thead>
	{% for i in result.items %}
		<tr>
		{% for k, v in i %}
				<td>{%exec ModelForm::fieldValue k i%}</td>
		{% endfor%}
		{% for j in action %}
			<td>{%exec str_replace '%id%' i.id j %}</td>
		{% endfor%}
		</tr>
	{%endfor%}
	</table>

	{% partial "paginator" %}
{%else%}

{%endif%}
