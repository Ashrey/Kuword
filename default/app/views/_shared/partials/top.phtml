<div class="well">
    <div class="btn-group">
        {% for  i in btn %}
			{%buffer txt%}<i class="icon-white icon-{{i['icon']}}"></i> {{i['text']}}{%endbuffer%}
			{%buffer class%}class="btn {{i['type']}}"{%endbuffer%}
            {% exec Html::linkAction i['action'] txt class %}
        {% endfor %}
    </div>
</div>
